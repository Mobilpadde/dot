{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar at the bottom of your screen
    "height": 12, // Waybar height
    // "width": 1366, // Waybar width
    // Choose the order of the modules
    "modules-left": ["sway/workspaces", "sway/mode"],
    "modules-center": ["sway/window"],
    "modules-right": ["custom/updater", "pulseaudio", "network", "temperature", "cpu", "memory", "tray", "clock"],
    "sway/window" :{
        "all-outputs" : false,
        "offscreen-css" : true,
        "offscreen-css-text": "ü´£"
    },
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "format": "{icon}",
        "format-icons": {
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "sway/mode": {
        "format": "{}"
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "format": "{usage}% cpu"
    },
    "memory": {
        "format": "{}% mem"
    },
    "battery": {
        "bat": "BAT0",
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        // "interface": "wlp2s0", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%)",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr}",
        "format-disconnected": "Disconnected ‚ö†"
    },
    "pulseaudio": {
        "scroll-step": 1,
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-muted": "ÔÄ¶",
        "format-icons": {
            "headphones": "ÔÄ•",
            "handsfree": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄß", "ÔÄ®"]
        }
    },
    "custom/updater":{
        "format": "Ô£ì {} Update(s)",
        "exec": "checkupdates | wc -l",
        "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
        "interval": 15,
        "on-click": "foot -e yay -Syu && notify-send 'The system has been updated' "
    },
    "custom/cpu":{
        "format": "Ô£ì {} Update(s)",
        "exec": "$HOME/.config/waybar/custom/cpugovernor.sh",
        "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
        "interval": 15,
        "on-click": "foot -e yay -Syu && notify-send 'The system has been updated' "
    },
    "custom/gpu":{
        "format": "Ô£ì {} Update(s)",
        "exec": "checkupdates | wc -l",
        "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
        "interval": 15,
        "on-click": "foot -e yay -Syu && notify-send 'The system has been updated' "
    }
}
